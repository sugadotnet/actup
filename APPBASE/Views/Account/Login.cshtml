@model APPBASE.Models.UserloginVM

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.ValidationSummary(true)

    <div class="body bg-gray">
        <div class="form-group">
            @Html.TextBoxFor(m => m.USR_ID, new { @class="form-control" , @placeholder = "User ID" })
            @Html.ValidationMessageFor(m => m.USR_ID)
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.USR_PSWD, new { @class = "form-control", @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.USR_PSWD)
        </div>          
    </div>
    <div class="footer">                                                               
        <button type="submit" class="btn bg-blue btn-block">Sign me in</button>  
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
