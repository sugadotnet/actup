
<!-- Info Cuti Besar -->
<div class="box box-danger">
    <div class="box-header">
        <i class="fa fa-comments"></i>
        <h3 class="box-title">Diskusi CPAR</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <ul class="todo-list">
            @foreach (var item in ViewBag.ModelCPARChat)
            {
                <!-- Informasi 1 -->
                <li>
                    <a href="@Url.Action("Details", "LogbookCPAR", new { id = item.CPAR_RUID })">
                        <!-- drag handle -->
                        <span class="handle">
                            <i class="fa fa-ellipsis-v"></i>
                            <i class="fa fa-ellipsis-v"></i>
                        </span>
                        <!-- todo text -->
                        <span class="text">@item.CPAR_ID </span>
                        <!-- Emphasis label -->
                        <small class="label label-danger"><i class="fa fa-clock-o"></i> @item.COUNT_NOTIF </small>
                    </a>
                </li><!-- Informasi 1 -->
            }
        </ul>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix no-border">
        @if (ViewBag.CPARChat != null) { if (ViewBag.CPARChat > 3) {<a href="@Url.Action("Index", new { id = "all-cpar-chat-notif" })" class="btn btn-flat btn-sm btn-default pull-right"><i class="fa fa-eye"></i> View All</a> } }
    </div>
</div><!-- /.box -->
